<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestGameMaui.MainPage"
             x:Name="RootPage"
             xmlns:local="clr-namespace:TestGameMaui"
             xmlns:behaviors="clr-namespace:TestGameMaui.Behaviors"
             BackgroundColor="#FFF8E1">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- default values, will be updated from code-behind on SizeChanged -->
            <x:Double x:Key="CellSize">56</x:Double>
            <x:Double x:Key="CellFontSize">28</x:Double>
            <x:Double x:Key="ScoreFontSize">28</x:Double>
            <x:Double x:Key="TargetFontSize">40</x:Double>
            <x:Double x:Key="HeartSize">32</x:Double>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <local:MainPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="☰">
            <MenuFlyoutItem Text="New Game" Command="{Binding NewGameCommand}" />
            <MenuFlyoutItem Text="{Binding SoundIconText}" Command="{Binding ToggleSoundCommand}" />
            <MenuFlyoutItem Text="Exit" Command="{Binding ExitCommand}" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <!-- Use a top-level Grid with rows so center area can expand and not be clipped -->
    <Grid RowDefinitions="Auto, *, Auto" ColumnDefinitions="*">
        <!-- Top: hearts and sound control -->
        <Grid Grid.Row="0">
            <HorizontalStackLayout
                Spacing="8"
                Padding="0,10,10,0"
                HorizontalOptions="End"
                VerticalOptions="Start"
                ZIndex="2">
                
                <!-- Sound toggle button -->
                <Button Text="{Binding SoundIconText}"
                        Command="{Binding ToggleSoundCommand}"
                        HeightRequest="{DynamicResource HeartSize}"
                        WidthRequest="{DynamicResource HeartSize}"
                        Padding="0"
                        FontSize="16"
                        BackgroundColor="Transparent"
                        TextColor="{Binding IsSoundEnabled, Converter={StaticResource BoolToColorConverter}}"
                        SemanticProperties.Description="{Binding SoundIconText}"
                        SemanticProperties.Hint="Toggle sound effects" />
                
                <!-- Hearts -->
                <Image Source="heart.png" HeightRequest="{DynamicResource HeartSize}" WidthRequest="{DynamicResource HeartSize}"
                       Opacity="{Binding Health, Converter={StaticResource HealthToOpacityConverter}, ConverterParameter=1}" />
                <Image Source="heart.png" HeightRequest="{DynamicResource HeartSize}" WidthRequest="{DynamicResource HeartSize}"
                       Opacity="{Binding Health, Converter={StaticResource HealthToOpacityConverter}, ConverterParameter=2}" />
                <Image Source="heart.png" HeightRequest="{DynamicResource HeartSize}" WidthRequest="{DynamicResource HeartSize}"
                       Opacity="{Binding Health, Converter={StaticResource HealthToOpacityConverter}, ConverterParameter=3}" />
                <Image Source="heart.png" HeightRequest="{DynamicResource HeartSize}" WidthRequest="{DynamicResource HeartSize}"
                       Opacity="{Binding Health, Converter={StaticResource HealthToOpacityConverter}, ConverterParameter=4}" />
                <Image Source="heart.png" HeightRequest="{DynamicResource HeartSize}" WidthRequest="{DynamicResource HeartSize}"
                       Opacity="{Binding Health, Converter={StaticResource HealthToOpacityConverter}, ConverterParameter=5}" />
            </HorizontalStackLayout>
        </Grid>

        <!-- Middle: scalable content (score, target, game area) -->
        <Grid Grid.Row="1" RowDefinitions="Auto, Auto, *" Padding="30,0" VerticalOptions="Center">
            <!-- Score -->
            <Label Grid.Row="0"
                   Text="{Binding Score, StringFormat='Score: {0}'}"
                   FontSize="{DynamicResource ScoreFontSize}"
                   FontAttributes="Bold"
                   TextColor="#1976D2"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />

            <!-- Target -->
            <Label Grid.Row="1"
                   Text="{Binding TargetNumber, StringFormat='Target: {0}'}"
                   FontSize="{DynamicResource TargetFontSize}"
                   FontAttributes="Bold"
                   TextColor="#D32F2F"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10" />

            <!-- Game Area Container: center and expand in available space -->
            <Grid Grid.Row="2" x:Name="GameAreaGrid" HorizontalOptions="Center" VerticalOptions="Center">
                <!-- Game Matrix Grid -->
                <CollectionView ItemsSource="{Binding Matrix}" x:Name="GameMatrixView"
                                ItemsLayout="VerticalList" SelectionMode="None"
                                HorizontalOptions="Center" VerticalOptions="Center">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <CollectionView ItemsSource="{Binding .}" ItemsLayout="HorizontalList" SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Padding="0" Margin="2" HasShadow="False" CornerRadius="18" BackgroundColor="{Binding State, Converter={StaticResource SelectedToColorConverter}}">
                                            <Frame.Behaviors>
                                                <behaviors:AnimateOnSelectedBehavior IsSelected="{Binding IsSelected}" />
                                            </Frame.Behaviors>
                                            <Button Text="{Binding Value}" Command="{Binding SelectCommand}" IsEnabled="{Binding IsEnabled}" FontSize="{DynamicResource CellFontSize}" FontAttributes="Bold" TextColor="Black" HeightRequest="{DynamicResource CellSize}" WidthRequest="{DynamicResource CellSize}" BackgroundColor="Transparent" />
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Star Animation Overlay -->
                <AbsoluteLayout x:Name="StarOverlay"
                               IsEnabled="False"
                               InputTransparent="True"
                               HorizontalOptions="Fill"
                               VerticalOptions="Fill"
                               Background="Transparent" />

                <!-- Evaluating overlay -->
                <Grid IsVisible="{Binding IsEvaluating}" BackgroundColor="#80000000" InputTransparent="False" ZIndex="50">
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                        <ActivityIndicator IsRunning="True" Color="White" WidthRequest="48" HeightRequest="48" />
                        <Label Text="Checking…" TextColor="White" FontSize="18" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Grid>

                <!-- GameOver overlay -->
                <Grid IsVisible="{Binding IsGameOver}" BackgroundColor="#C0000000" InputTransparent="False" ZIndex="100">
                    <Frame CornerRadius="12" Padding="20" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="White" WidthRequest="300">
                        <VerticalStackLayout Spacing="16" HorizontalOptions="Center">
                            <Label Text="Game Over" FontSize="28" FontAttributes="Bold" TextColor="#D32F2F" HorizontalOptions="Center" />
                            <Label Text="{Binding Score, StringFormat='Your score: {0}'}" FontSize="20" HorizontalOptions="Center" />
                            <HorizontalStackLayout Spacing="12">
                                <Button Text="Restart" Command="{Binding NewGameCommand}" FontSize="20" BackgroundColor="#1976D2" TextColor="White" WidthRequest="120" />
                                <Button Text="Exit" Command="{Binding ExitCommand}" FontSize="20" BackgroundColor="#E53935" TextColor="White" WidthRequest="120" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Tutorial overlay -->
                <Grid IsVisible="{Binding ShowTutorial}" BackgroundColor="#C0000000" InputTransparent="False" ZIndex="200">
                    <Frame CornerRadius="12" Padding="20" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="White" WidthRequest="320">
                        <VerticalStackLayout Spacing="12">
                            <Label Text="How to Play" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" />
                            <Label Text="Find two cells that add up to the target number shown above." FontSize="16" HorizontalOptions="Center" />
                            <Label Text="Tap the first cell, then the second. Correct pairs turn green." FontSize="16" HorizontalOptions="Center" />
                            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                                <Button Text="Start" Command="{Binding TutorialStartCommand}" BackgroundColor="#1976D2" TextColor="White" WidthRequest="120" />
                                <Button Text="Skip" Command="{Binding TutorialSkipCommand}" BackgroundColor="#BDBDBD" TextColor="Black" WidthRequest="120" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

            </Grid>
        </Grid>

        <!-- Bottom row placeholder (could be used for footer or controls) -->
        <Grid Grid.Row="2" />
    </Grid>
</ContentPage>
